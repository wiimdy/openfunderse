{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://openclaw.dev/schemas/intent.schema.json",
  "title": "TradeIntent",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "snapshotHash", "policy", "actions", "timestamp"],
  "properties": {
    "version": { "type": "string", "const": "1.0" },
    "snapshotHash": { "type": "string", "pattern": "^0x[0-9a-fA-F]{64}$" },
    "timestamp": { "type": "string", "format": "date-time" },
    "policy": {
      "type": "object",
      "additionalProperties": false,
      "required": ["dryRun", "maxNotionalUSD", "slippageBpsCap", "deadlineSeconds", "venueAllowlist", "tokenAllowlist"],
      "properties": {
        "dryRun": { "type": "boolean" },
        "execute": { "type": "boolean" },
        "maxNotionalUSD": { "type": "number", "exclusiveMinimum": 0 },
        "slippageBpsCap": { "type": "integer", "minimum": 0, "maximum": 10000 },
        "deadlineSeconds": { "type": "integer", "minimum": 1, "maximum": 86400 },
        "venueAllowlist": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
        "tokenAllowlist": { "type": "array", "items": { "type": "string" }, "minItems": 1 }
      }
    },
    "actions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "chainId", "venue", "tokenIn", "tokenOut", "amountIn", "minAmountOut"],
        "properties": {
          "type": { "type": "string", "enum": ["swapExactIn"] },
          "chainId": { "type": "integer", "minimum": 1 },
          "venue": { "type": "string", "minLength": 1 },
          "tokenIn": { "type": "string", "minLength": 1 },
          "tokenOut": { "type": "string", "minLength": 1 },
          "amountIn": {
            "type": "object",
            "additionalProperties": false,
            "required": ["type", "value"],
            "properties": {
              "type": { "type": "string", "enum": ["uint256"] },
              "value": { "type": "string", "pattern": "^[0-9]+$" },
              "decimals": { "type": "integer", "minimum": 0, "maximum": 255 }
            }
          },
          "minAmountOut": {
            "type": "object",
            "additionalProperties": false,
            "required": ["type", "value"],
            "properties": {
              "type": { "type": "string", "enum": ["uint256"] },
              "value": { "type": "string", "pattern": "^[0-9]+$" },
              "decimals": { "type": "integer", "minimum": 0, "maximum": 255 }
            }
          },
          "deadlineUnix": { "type": "integer", "minimum": 0 },
          "notes": { "type": "string" }
        }
      }
    },
    "intentHash": { "type": "string", "pattern": "^0x[0-9a-fA-F]{64}$" }
  }
}

