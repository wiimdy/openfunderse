{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://openclaw.dev/schemas/snapshot.schema.json",
  "title": "Snapshot",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "claims", "snapshotHash", "timestamp"],
  "properties": {
    "version": { "type": "string", "const": "1.0" },
    "timestamp": { "type": "string", "format": "date-time" },
    "claims": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["claimHash", "claimURI"],
        "properties": {
          "claimHash": { "type": "string", "pattern": "^0x[0-9a-fA-F]{64}$" },
          "claimURI": { "type": "string", "minLength": 1 }
        }
      }
    },
    "snapshotHash": { "type": "string", "pattern": "^0x[0-9a-fA-F]{64}$" }
  }
}

